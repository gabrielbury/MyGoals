@model IEnumerable<XTRM.MyGoals.WEB.UI.Models.Goal>

@{
    ViewBag.Title = "GoalsList";
}

<h2>GoalsList</h2>

<p>
    @Html.ActionLink("Create New", "Include")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.includeDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dueTo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.includeDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dueTo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
            @Html.ActionLink("Details", "Details", new { id = item.id }) |
            @Ajax.ActionLink("Delete", "DeleteGoal", new { goalId = item.id }, new AjaxOptions { HttpMethod = "DELETE" }, new { @class = "botaoDeletar"}) |
            @Html.ActionLink("Add History", "AddHistory", "GoalHistory", new { goalId = item.id }, null) |
            @Html.ActionLink("View History", "GoalHistoryList", "GoalHistory", new { goalId = item.id }, null)
        </td>
    </tr>
}
</table>

<script>
    $('.botaoDeletar').on('click', function () {
        var bt = $(this);
        if (confirm('Desejas mesmo excluir o objetivo?')) {
            bt.parent().parent().hide();
            return true;
        } else {
            return false;
        }
    });
</script>